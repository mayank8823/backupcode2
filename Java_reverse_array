//Reverse the array
import javax.swing.*;
import java.util.*;
public class Array2 {
    public static void main(String[] args) {
        int [] arr;int n;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the size of array :");
        n=sc.nextInt();
        arr=new int[n];
        System.out.println(arr.length);
        for(int i=0;i<arr.length;i++){
            arr[i]=sc.nextInt();
        }
        int key;
        System.out.print("Enter the key you want to find in array :");
        key=sc.nextInt();

        for(int i=0;i<n;i++){
            if(key==arr[i]){
                System.out.println("The key "+ key+"is present in the array");
                break;
            }
            else{
                System.out.println("The kay "+key+" is not present in the array");
                break;
            }
        }
    }
}
